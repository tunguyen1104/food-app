<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="4dp">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_message_send_background"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/chatMessageSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey there ðŸ‘‹, Welcome to my video"
            android:textAppearance="@style/body_m"
            android:textColor="@color/chat_message_send_text_background"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chatMessageSendTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="11:57 am"
                android:textAppearance="@style/body_s"
                android:textColor="@color/message_time"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/statusTick"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_single_tick" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>