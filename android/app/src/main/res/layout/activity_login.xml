<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_lightest"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In to Food App"
        android:textAlignment="center"
        android:textAppearance="@style/heading_l"
        android:textColor="@color/dark_darkest"
        android:layout_marginTop="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />
    </androidx.cardview.widget.CardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|start"
            android:src="@drawable/ic_phone" />
        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:paddingBottom="18dp"
            android:textAppearance="@style/body_l"
            android:backgroundTint="@color/dark_lightest"
            android:hint="Phone number"
            android:inputType="textEmailAddress" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|start"
            android:src="@drawable/ic_pass" />
        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:paddingBottom="18dp"
            android:textAppearance="@style/body_l"
            android:backgroundTint="@color/dark_lightest"
            android:hint="Password"
            android:inputType="textPassword" />
        <ImageView
            android:id="@+id/ivPasswordVisibility"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_eye" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Log In"
        android:textAppearance="@style/action_l"
        android:textColor="@color/light_lightest"
        android:backgroundTint="@color/highlight_darkest"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tvLoginToSMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In with SMS"
        android:textAlignment="textEnd"
        android:textAppearance="@style/action_m"
        android:textColor="@color/success_medium"
        android:layout_marginTop="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/light_darkest"
        android:background="@drawable/dashed_line"
        android:layout_marginTop="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continue with Google"
        app:icon="@drawable/ic_google"
        app:iconTint="@null"
        android:textAppearance="@style/action_l"
        android:textColor="@color/dark_darkest"
        android:backgroundTint="@color/highlight_light"
        android:layout_marginTop="8dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFacebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Continue with Facebook"
        app:icon="@drawable/ic_facebook"
        app:iconTint="@null"
        android:textAppearance="@style/action_l"
        android:textColor="@color/dark_darkest"
        android:backgroundTint="@color/highlight_light"
        android:layout_marginTop="0dp" />

</LinearLayout>
